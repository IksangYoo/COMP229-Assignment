<% include ../partials/header.ejs %>

<% include ../partials/main_nav.ejs %>
<div class="jumbotron">
    <h1 class="display-6">Update page</h1>
    <hr class="my-4">
<!-- Content for the Add page-->

  <div class="row">
      <div class="col-md-offset-2 col-md-5">
      <form class="form" method="POST">
          <div class="form-group">
              <label for="nameTextField">Name</label>
              <input type="text" class="form-control"
              id="nameTextField"
              placeholder="Enter the Name"
              name="name" 
              value="<%= bscontact.name %>"
              required>
          </div>

          <div class="form-group">
            <label for="numberTextField">Number</label>
            <input type="text" class="form-control"
            id="numberTextField"
            placeholder="Enter the Number"
            name="number" 
            value="<%= bscontact.number %>"
            required>
        </div>

        <div class="form-group">
            <label for="emailTextField">Email</label>
            <input type="text" class="form-control"
            id="emailTextField"
            placeholder="Enter the Email"
            name="email" 
            value="<%= bscontact.email %>"
            required>
        </div>
        <button class = "btn btn-primary" type="submit">
        <i class="fas fa-edit"></i> Submit</button>

        <a href="/bscontact-list" class="btn btn-warning">
            <i class="fas fa-undo"></i> Cancle</a>
      </form>

</div>
</div>


